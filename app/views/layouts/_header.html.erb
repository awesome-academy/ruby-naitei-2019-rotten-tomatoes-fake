<header>
  <div class="header-menu mt-50" id="sticky-header">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-12 col-sm-12">
          <div class="logo-img">
            <%= link_to image_tag("home-one/icon/logo.png", :alt =>
                          "logo", class: "logo_size"), "#" %>
          </div>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-12">
          <div class="main-menu text-right">
            <nav>
              <ul>
                <li class="active">
                  <%= link_to t("movies_title"), '#' %>
                </li>
                <li>
                  <%= link_to t("tvshow_title"), "#" %>
                </li>
                <li>
                  <%= link_to t("news_title"), "#" %>
                </li>
                <% if logged_in? %>
                <li>
                  <%= link_to t("logout"), logout_path, method: :delete %>
                </li>
                <% else %>
                <li>
                  <%= link_to t("login_title"), '#', { 'data-toggle' => 'modal', 'data-target' => '#loginModal'} %>
                </li>
                <li>
                  <%= link_to t("signup_title"), '#', { 'data-toggle' => 'modal', 'data-target' => '#signupModal'} %>
                </li>
                <% end %>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="slider-area">
    <div class="slider-active owl-carousel owl-theme">
      <div class="slider-item fullscreen single-banner">
        <div class="youtube-video-wrapper" data-black-overlay="6">
          <div class="youtube-bg" data-property="{videoURL:'https://www.youtube.com/watch?v=xpgzmcMUv2U',containment:'self',showControls:false,startAt:0,mute:true,autoPlay:true,loop:true,opacity:1,showYTLogo:false,optimizeDisplay:true}"></div>
        </div>
        <div class="container">
          <div class="row">
            <div class="slide-content text-center col-lg-12 col-md-12 col-sm-12">
              <h1>
                <%= t "slider.title1"%>
              </h1>
            </div>
          </div>
        </div>
      </div>
      <div class="slider-item fullscreen single-banner">
        <div class="youtube-video-wrapper" data-black-overlay="6">
          <div class="youtube-bg" data-property="{videoURL:'https://www.youtube.com/watch?v=JreOIO7JMiU',containment:'self',showControls:false,startAt:0,mute:true,autoPlay:true,loop:true,opacity:1,showYTLogo:false,optimizeDisplay:true}"></div>
        </div>
        <div class="container">
          <div class="row">
            <div class="slide-content text-center col-lg-12 col-md-12 col-sm-12">
              <h1>
                <%= t "slider.title2"%>
              </h1>
            </div>
          </div>
        </div>
      </div>
      <div class="slider-item fullscreen single-banner">
        <div class="youtube-video-wrapper" data-black-overlay="6">
          <div class="youtube-bg" data-property="{videoURL:'https://www.youtube.com/watch?v=aAguZDFjKi8',containment:'self',showControls:false,startAt:0,mute:true,autoPlay:true,loop:true,opacity:1,showYTLogo:false,optimizeDisplay:true}"></div>
        </div>
        <div class="container">
          <div class="row">
            <div class="slide-content text-center col-lg-12 col-md-12 col-sm-12">
              <h1>
                <%= t "slider.title3"%>
              </h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
