<%= content_for :slider do %>
  <div class="slider-area fake-slider container"></div>
<% end %>
<div class="container content-margin-top">
  <div class="row">
    <div class="col-3 reset-padding">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <%= link_to t(".tab_movie.title"), "#menu1", data: {toggle: "pill"}, class: "nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".tab_tvshow.title"), "#menu2", data: {toggle: "pill"}, class: "nav-link"%>
        </li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="menu1">
          <div class="panel panel-default">
            <h2><span class="badge badge-warning">
                <%= t ".tab_movie.top" %></span></h2>
            <div>
              <!-- Content -->
              <% count = 0 %>
              <% @movies_top_new.each do |movie| %>
                <% if count < 5 %>
                  <h5><span class="badge-light"><i class="fa fa-film" aria-hidden="true"></i></span>
                    <%= link_to movie.name, movie, class: "text-warning"%>
                  </h5>
                <% end %>
                <% count += 1 %>
            <% end %>
              <!--end content -->
            </div>
            <% if @movies_top_new.count  > 5 %>
              <%= link_to t(".more"),"#", class: "text-info", data: {toggle: "collapse", target: "#demo"}%>
              <div id="demo" class="collapse">
                <% @movies_top_new.last(@movies_top_new.count -5).each do |movie| %>
                  <h5><span class="badge-light"><i class="fa fa-film" aria-hidden="true"></i></span>
                    <%= link_to movie.name, movie, class: "text-warning"%>
                  </h5>
                <% end %>>
            <% end %>
            </div>
          </div>
          <h5><span class="badge badge-warning">
              <%= t ".tab_movie.new" %></span>
          </h5>
          <div>
            <% count = 0 %>
            <% @movies_top_score.each do |movie|  %>
              <% if count < 5 %>
                <h5><span class="badge-light"><i class="fa fa-film" aria-hidden="true"></i></span>
                  <%= link_to movie.name, movie, class: "text-warning"%>
                </h5>
              <% end %>
              <% count += 1 %>
            <% end %>
          </div>
          <% if @movies_top_score.count  > 5 %>
            <%= link_to t(".more"),"#", class: "text-info", data: {toggle: "collapse", target: "#topmovie"} %>
            <div id="topmovie" class="collapse">
              <% @movies_top_score.last(@movies_top_score.count -5).each do |movie| %>
                <h5><span class="badge-light"><i class="fa fa-film" aria-hidden="true"></i></span>
                  <%= link_to movie.name, movie, class: "text-warning"%>
                </h5>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="tab-pane fade" id="menu2">
          <div class="panel panel-default">
            <h2><span class="badge badge-warning">
                <%= t ".tab_tvshow.top"%></span></h2>
            <div>
              <h5><span class="badge-light"><i class="fa fa-film" aria-hidden="true"></i></span>
                <%= link_to t("teamplate.name"),"#", class: "text-warning"%>
              </h5>
            </div>
            <%= link_to t(".more"),"#", class: "text-info", data: {toggle: "collapse", target: "#tvshow"} %>
            <div id="tvshow" class="collapse">
              <h5><span class="badge-light"><i class="fa fa-film" aria-hidden="true"></i></span>
                <%= link_to t("teamplate.name"),"#", class: "text-warning"%>
              </h5>
            </div>
          </div>
          <h5><span class="badge badge-warning">
              <%= t ".tab_tvshow.top" %></span>
          </h5>
          <div>
            <h5><span class="badge-light"><i class="fa fa-film" aria-hidden="true"></i></span>
              <%= link_to t("teamplate.name"),"#", class: "text-warning"%>
            </h5>
          </div>
          <%= link_to t(".more"),"#", class: "text-info", data: {toggle: "collapse", target: "#toptv"}%>
          <div id="toptv" class="collapse">
            <h5><span class="badge-light"><i class="fa fa-film" aria-hidden="true"></i></span>
              <%= link_to t("teamplate.name"),"#", class: "text-warning"%>
            </h5>
          </div>
        </div>
      </div>
    </div>
    <div class="col-9">
      <div class="row">
        <div class="col-4">
          <%= image_tag @movie.poster.url if @movie.poster? %>
        </div>
        <div class="col-8 bg-dark">
          <br>
          <div class="text-center">
            <h3 class="text-white">
              <%= @movie.name %>
            </h3>
            <div class="text-white">
              <%= t ".right_box.note1" %>
            </div>
            <div class="text-white">
              <%= t ".right_box.note2" %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-6 text-right">
              <h3><span class="badge-warning badge">
                  <%= @movie.critic_score %></span></h3>
              <h4 class="text-muted">
                <%= t ".right_box.tomascore" %>
              </h4>
              <p class="text-light">
                <%= t ".right_box.explain1" %>
              </p>
            </div>
            <div class="col-6">
              <h3><span class="badge-warning badge">
                  <%= @movie.audience_score %></span></h3>
              <h4 class="text-muted">
                <%= t ".right_box.audiscore" %>
              </h4>
              <p class="text-light">
                <%= t ".right_box.explain2" %>
              </p>
            </div>
          </div>
        </div>
      </div><br>
      <div class="row">
        <div class="col-4">
        </div>
        <div class="col-8">
          <div class="form-group">
            <label for="exampleFormControlTextarea1">
              <%= t ".right_box.comment" %></label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="1"></textarea>
            <br>
            <div class="text-right"><button type="button" class="btn btn-warning btn-sm "><%= t"submit" %></button></div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <h3 class="text-center bg-danger"><span class="text-white ">
              <%= @movie.name %></span>
            <%= t"photos"%>
          </h3>
        </div>
        <div class="col-12">
          <%= image_tag @movie.poster.url if @movie.poster?%>
        </div>
      </div><br><br>
      <div class="row">
        <div class="col-12">
          <h3 class="text-center bg-danger"><span class="text-white ">
              <%= t".tab_movie.title" %></span>
            <%= t"info"%>
          </h3>
        </div>
        <div class="col-12">
          <p>
            <%= @movie.info %>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <h3 class="text-center bg-danger"><span class="text-white ">
              <%= t"cast" %></span></h3>
        </div>
        <div class="col-12">
          <div class="row">
            <div class="col-2">
              <div>
                <%= image_tag("home-video/trailer/1.jpg", class: "rounded-circle") %>
              </div><br>
              <h6 class="text-center"><span class="text-warning">
                  <%= t "teamplate.name" %></span></h6>
            </div>
            <div class="col-2">
              <div>
                <%= image_tag("home-video/trailer/1.jpg", class: "rounded-circle") %>
              </div><br>
              <h6 class="text-center"><span class="text-warning">
                  <%= t "teamplate.name" %></span></h6>
            </div>
            <div class="col-2">
              <div>
                <%= image_tag("home-video/trailer/1.jpg", class: "rounded-circle") %>
              </div><br>
              <h6 class="text-center"><span class="text-warning">
                  <%= t "teamplate.name" %></span></h6>
            </div>
            <div class="col-2">
              <div>
                <%= image_tag("home-video/trailer/1.jpg", class: "rounded-circle") %>
              </div><br>
              <h6 class="text-center"><span class="text-warning">
                  <%= t "teamplate.name" %></span></h6>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
